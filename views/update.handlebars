<h1>Update Item</h1>

<form method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{item.name}}" required class="form-control">
    </div>

    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" value="{{item.category}}" required class="form-control">
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" required class="form-control">{{item.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="image">Image:</label>
        {{!-- <input type="file" class="custom-file-input" id="image" name="file" style="display: none;"> --}}
        <input type="file" id="image" name="file" accept="image/*" class="form-control-file">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
